<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/header"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Laporan"
                    android:layout_marginEnd="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/input_judul_laporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan Judul Laporan"
                    android:textSize="11sp"
                    android:fontFamily="@font/source_sans_pro"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_input_laporan"
                        android:layout_width="85sp"
                        android:layout_height="20sp"
                        android:background="@drawable/button"
                        android:text="Simpan"
                        android:textColor="@color/white"
                        android:textSize="7sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_marginEnd="10sp"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/deskripsi_laporan"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:textSize="14sp"
                android:padding="10sp"
                android:gravity="top"
                android:hint="Masukkan Text"
                android:background="@drawable/textbox"
                android:inputType="textMultiLine"
                android:scrollbars="vertical">
            </EditText>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <Button
                    android:id="@+id/button_input_gambar"
                    android:layout_width="100dp"
                    android:layout_height="20sp"
                    android:layout_marginEnd="5sp"
                    android:background="#878787"
                    android:text="Ambil / Pilih Gambar"
                    android:textColor="@color/white"
                    android:textSize="7sp" />
                <TextView
                    android:id="@+id/file_gambar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginEnd="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="File Gambar"
                    android:textStyle="normal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>